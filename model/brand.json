{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "http://product-api.europeansourcing.com/schemas/brand.json",
  "title": "Brand",
  "description": "Describe a brand object",
  "type": "object",
  "properties": {
    "id": {
      "type": "number",
      "description": "Unique id of the brand"
    },
    "name": {
      "type": "string",
      "description": "Name of the brand"
    },
    "slug": {
      "type": "string",
      "description": "Unique slug of the brand's name"
    },
    "suffix": {
      "type": "string",
      "description": "Possible values: registered_trademark, trademark or copyright"
    },
    "logo": {
      "$ref": "http://product-api.europeansourcing.com/schemas/image.json",
      "description": "Logo of the brand"
    }
  }
}
